---
// Recibimos masterOrder por props
const { masterOrder } = Astro.props;
---

<ul class="ula-container" data-master={JSON.stringify(masterOrder)}>
    <slot />
</ul>

<style>
    ul {
        box-sizing: border-box;
        display: flex;
        flex-wrap: wrap; 
        align-items: center;
        justify-content: center;
        list-style-type: none;
        padding: 0;
        margin: 0;
        width: 100%;
        background-color: bisque;
        border: 0.3vh solid #caa06d;
    }
</style>