---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---
<Layout>
    <main>
        <Header />
        <section>
            <div class="left">
                <h1>Page a</h1>
            </div>
            <div class="right">
                <h1>Page b</h1>
            </div>
        </section>
    </main>
</Layout>

<style>
    main {
        height: 100vh;
        width: 70vh;
    }
    section {
        height: 46vh;
        width: 100%;
        display: flex;
    }
    .left, .right {
        width: 50%;
        height: 100%;
        border: 1px solid black;
    }
</style>